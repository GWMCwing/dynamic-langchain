{
  "name": "langchain-poc",
  "type": "module",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.20",
  "private": true,
  "scripts": {
    "api:dev": "turbo dev --scope api",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
