{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "db:generate": {
      "dependsOn": [
        "^db:generate"
      ],
      "inputs": [
        "prisma/schema.prisma"
      ],
      "outputs": [
        "node_modules/@prisma/client"
      ]
    },
    "build": {
      "dependsOn": [
        "^db:generate",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}